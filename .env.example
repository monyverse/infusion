# =================================================================================
# InFusion - AI-Powered Cross-Chain DeFi Platform
# Environment Configuration Template
# =================================================================================

# =================================================================================
# FRONTEND CONFIGURATION
# =================================================================================

# AppKit/WalletConnect Configuration
NEXT_PUBLIC_PROJECT_ID=your_walletconnect_project_id_here
NEXT_PUBLIC_APP_NAME="InFusion DeFi"
NEXT_PUBLIC_APP_DESCRIPTION="AI-Powered Cross-Chain DeFi Platform"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_ICON=https://your-domain.com/icon.png

# Frontend URL (for CORS)
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3003

# =================================================================================
# BACKEND CONFIGURATION
# =================================================================================

# Server Configuration
PORT=3003
NODE_ENV=development

# =================================================================================
# 1INCH API INTEGRATION
# =================================================================================

# 1inch API Key (Required for Fusion+ integration)
INCH_API_KEY=your_1inch_api_key_here

# 1inch API Base URLs
INCH_API_BASE_URL=https://api.1inch.dev
INCH_FUSION_API_URL=https://fusion.1inch.io

# =================================================================================
# AI SERVICES
# =================================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000

# Anthropic Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# AI Features Toggle
ENABLE_AI_AUTOMATION=true
ENABLE_AI_PORTFOLIO_MANAGEMENT=true
ENABLE_AI_INTENT_PROCESSING=true

# =================================================================================
# BLOCKCHAIN RPC CONFIGURATION
# =================================================================================

