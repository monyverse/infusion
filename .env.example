# =================================================================================
# SECURITY CONFIGURATION
# =================================================================================

# API Security
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX=100
API_TIMEOUT_MS=30000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://your-production-domain.com

# Session & JWT (if needed)
JWT_SECRET=your_super_secure_jwt_secret_here
SESSION_SECRET=your_super_secure_session_secret_here

# =================================================================================
# DATABASE CONFIGURATION (Optional)
# =================================================================================

# Redis (for caching and session storage)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# MongoDB (for storing user data, transaction history)
MONGODB_URI=mongodb://localhost:27017/infusion
MONGODB_DB_NAME=infusion

# PostgreSQL (alternative database option)
DATABASE_URL=postgresql://username:password@localhost:5432/infusion

# =================================================================================
# EXTERNAL SERVICES
# =================================================================================

# CoinGecko API (for price data)
COINGECKO_API_KEY=your_coingecko_api_key
COINGECKO_API_URL=https://api.coingecko.com/api/v3

# DeFiLlama API (for TVL and protocol data)
DEFILLAMA_API_URL=https://api.llama.fi

# Alchemy (Additional RPC provider)
ALCHEMY_API_KEY=your_alchemy_api_key

# Moralis (for NFT and wallet data)
MORALIS_API_KEY=your_moralis_api_key

# =================================================================================
# MONITORING & ANALYTICS
# =================================================================================

# Sentry (Error tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=your_google_analytics_id

# PostHog (Product analytics)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =================================================================================
# DEPLOYMENT CONFIGURATION
# =================================================================================

# Vercel Configuration
VERCEL_URL=your-app.vercel.app
VERCEL_ENV=development

# Docker Configuration
DOCKER_REGISTRY=your-docker-registry
DOCKER_IMAGE_TAG=latest

# AWS Configuration (if using AWS)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# =================================================================================
# DEVELOPMENT CONFIGURATION
# =================================================================================

# Debug Settings
DEBUG=true
VERBOSE_LOGGING=true
LOG_LEVEL=debug

# Hot Reload
FAST_REFRESH=true

# Development Tools
ANALYZE_BUNDLE=false
DISABLE_ESLINT=false

# =================================================================================
